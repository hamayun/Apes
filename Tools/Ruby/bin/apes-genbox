#!/usr/bin/env ruby1.9

require 'apes/id'
require 'apes/genbox'
require 'rubygems'
require 'open4'

#
# Define program usage
#

def program_usage
  puts "Usage: apes-genbox {--here} <name> <version>"
end

#
# Reset global configurations
#

build_here = false

#
# Parse the arguments
#

ARGV.uniq!
arguments = ARGV.clone

ARGV.each do |arg|
  if arg.include?("--") then
    case arg
    when "--here"
      build_here = true
      arguments.delete("--here")
    else
      program_usage
      abort
    end
  end
end

if arguments.count != 2 then
  program_usage
  abort
end

#
# Get the component list
#

begin
  component_list = APELibraryParser.getComponentList
rescue RuntimeError
  puts '[genbox] Variable APES_COMPONENT_PATH not defined.'
  abort
rescue Errno::ENOENT => detail
  print '[gendbox] error in APES_COMPONENT_PATH: '
  puts detail.message
  abort
end

#
# Find the requested component
#

id = APEId.new(arguments[0], nil, arguments[1])

components = component_list.find_all { |e| e.id == id }

if components == nil or components.empty? then
  abort "[genbox] " + arguments[0] + ": no match found."
elsif components.length != 1 then
  abort "[genbox] " + name + ": multiple matches found."
end

#
# Generate the sandbox
#

generate_sandbox components[0], component_list, build_here 

