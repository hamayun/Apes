#!/usr/local/bin/ruby

require 'apes/genbox'
require 'open4'

#
# Define program usage
#

def program_usage
  puts "Usage: apes-genbox {--here} <name>"
end

#
# Check if the APES_ROOT variable exists
#

if ENV["APES_ROOT"] == nil or ENV["APES_ROOT"].empty? then
  abort "[genbox] The APES_ROOT variable is not defined."
end

#
# Reset global configurations
#

build_here = false

#
# Parse the arguments
#

ARGV.uniq!
arguments = ARGV.clone

ARGV.each do |arg|
  if arg.include?("--") then
    case arg
    when "--here"
      build_here = true
      arguments.delete("--here")
    else
      program_usage
      abort
    end
  end
end

if arguments.count != 1 then
  program_usage
  abort
end

#
# Parse the library
#

components = []
components_list = []

APEParseLibrary(Dir.pwd, components_list)
APEParseLibrary(ENV["APES_ROOT"], components_list)

components = components_list.find_all do |e|
  e.id.name == arguments[0]
end

if components == nil or components.empty? then
  abort "[genbox] " + arguments[0] + ": no match found."
end

if components.length != 1 then
  abort "[genbox] " + name + ": multiple matches found."
end

#
# Generate the sandbox
#

generate_sandbox(components[0], components_list, build_here)

