require 'apes/id'
require 'apes/parse'

require 'rubygems'
require 'term/ansicolor'

include Term::ANSIColor

def program_usage
  puts 'Usage: apes-list'
end

if ARGV.count != 0 then
  program_usage
else
  begin
    component_list = APELibraryParser.getComponentList
    longer_id = component_list.max do |a,b|
      a.id.name.length <=> b.id.name.length
    end

    component_list.each do |c|
      print c.id.name.blue
      (longer_id.id.name.length - c.id.name.length + 1).times { print ' ' }
      puts ('[' + c.id.version + ']').green
    end
  rescue RuntimeError
    puts '[apes-list] Variable APES_COMPONENT_PATH not defined.'
  rescue Errno::ENOENT => detail
    print '[apes-list] error in APES_COMPONENT_PATH: '
    puts detail.message
  end
end

